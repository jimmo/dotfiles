exec xfsettingsd
exec xfce4-power-manager --restart
exec xscreensaver
exec nm-applet

# screen lock
bindsym $mod+l exec xscreensaver-command -lock

# start chrome
bindsym $mod+g exec google-chrome

# volume control
bindsym XF86AudioLowerVolume exec amixer -c 1 -- sset Master playback 5dB-
bindsym XF86AudioRaiseVolume exec amixer -c 1 -- sset Master playback 5dB+

bindsym $mod+Shift+Return exec i3-sensible-terminal -e '~/bin/ssh-to-desktop'

bindsym $mod+Shift+s exec /home/musji/bin/s
